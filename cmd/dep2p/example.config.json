{
  "_comment": "DeP2P 示例配置文件 - 复制为 config.json 并根据需要修改",

  "identity": {
    "key_file": "~/.dep2p/identity.key",
    "key_type": "Ed25519",
    "auto_generate": true
  },

  "transport": {
    "enable_quic": true,
    "enable_tcp": true,
    "enable_websocket": false,
    "dial_timeout": "30s"
  },

  "security": {
    "enable_tls": true,
    "enable_noise": true,
    "preferred_protocol": "tls",
    "negotiate_timeout": "60s"
  },

  "conn_mgr": {
    "low_water": 100,
    "high_water": 400,
    "grace_period": "20s"
  },

  "discovery": {
    "enable_dht": true,
    "enable_mdns": true,
    "enable_bootstrap": true,
    "bootstrap": {
      "peers": [
        "/dns4/bootstrap-ap.dep2p.io/udp/4001/quic-v1/p2p/12D3KooWExample1...",
        "/dns4/bootstrap-eu.dep2p.io/udp/4001/quic-v1/p2p/12D3KooWExample2...",
        "/dns4/bootstrap-na.dep2p.io/udp/4001/quic-v1/p2p/12D3KooWExample3..."
      ],
      "min_peers": 4,
      "timeout": "30s"
    }
  },

  "nat": {
    "enable_autonat": true,
    "enable_upnp": true,
    "enable_holepunch": true,
    "stun_servers": [
      "stun.l.google.com:19302",
      "stun1.l.google.com:19302"
    ]
  },

  "relay": {
    "enable_client": true,
    "enable_server": false
  },

  "resource": {
    "enable_resource_manager": true,
    "system": {
      "max_connections": 1000,
      "max_streams": 10000
    }
  }
}

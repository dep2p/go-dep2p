{
  "_comment": "DeP2P Bootstrap 节点配置模板 - 仅提供节点发现服务",
  "_usage": "dep2p --config bootstrap.config.json --port PORT --public-addr /ip4/YOUR_IP/udp/PORT/quic-v1",
  "_doc": "详细说明请参阅 README.md",

  "storage": {
    "_comment": "存储配置 - 使用独立数据目录避免与其他节点冲突",
    "data_dir": "./data/bootstrap"
  },

  "identity": {
    "_comment": "节点身份配置 - 首次运行自动生成密钥",
    "key_file": "./data/bootstrap/identity.key",
    "key_type": "Ed25519",
    "auto_generate": true
  },

  "transport": {
    "_comment": "传输层配置 - QUIC 性能更好，TCP 兼容性更好",
    "enable_quic": true,
    "enable_tcp": true,
    "enable_websocket": false,
    "dial_timeout": "30s"
  },

  "security": {
    "_comment": "安全层配置 - TLS 和 Noise 都启用以最大化兼容性",
    "enable_tls": true,
    "enable_noise": true,
    "preferred_protocol": "tls",
    "negotiate_timeout": "60s"
  },

  "discovery": {
    "_comment": "节点发现配置 - Bootstrap 专用",
    "enable_dht": true,
    "enable_mdns": false,
    "enable_bootstrap": true,
    "bootstrap": {
      "_comment": "作为 Bootstrap 服务节点，启用服务能力",
      "enable_service": true,
      "peers": [],
      "min_peers": 5,
      "timeout": "30s"
    }
  },

  "nat": {
    "_comment": "NAT 穿透配置 - 云服务器通常有公网 IP，可关闭 UPnP",
    "enable_autonat": true,
    "enable_upnp": false,
    "enable_natpmp": false,
    "enable_holepunch": true
  },

  "relay": {
    "_comment": "中继配置 - Bootstrap 节点不提供中继服务",
    "enable_client": true,
    "enable_server": false,
    "enable_system_relay": false,
    "system_relay_addr": ""
  },

  "conn_mgr": {
    "_comment": "连接管理配置 - Bootstrap 节点连接数较多",
    "low_water": 300,
    "high_water": 600,
    "grace_period": "30s"
  },

  "resource": {
    "_comment": "资源限制配置 - 根据服务器内存调整",
    "enable_resource_manager": true,
    "system": {
      "max_connections": 1000,
      "max_streams": 10000,
      "max_memory": 536870912
    }
  },

  "messaging": {
    "_comment": "消息层配置 - Bootstrap 节点保持基本消息能力",
    "enable_pubsub": true,
    "enable_streams": true,
    "enable_liveness": true
  },

  "realm": {
    "_comment": "Realm 层配置 - Bootstrap 节点通常不需要网关能力",
    "enable_gateway": false,
    "enable_routing": true,
    "enable_member": true,
    "enable_auth": false
  }
}
